{
  "manifest_version": 3,
  "name": "ThreatBarrier â€” Advanced Browser Firewall & Threat Intelligence",
  "version": "1.0.0",
  "description": "Real-time browser firewall with tracker blocking, threat scoring, and domain intelligence.",
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png" 
  },
  "action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/16.png",
      "32": "icons/32.png",
      "48": "icons/48.png",
      "128": "icons/128.png"
    }
  },
  "options_ui": {
    "page": "dashboard/dashboard.html",
    "open_in_tab": true
  },
  "background": {
    "service_worker": "service_worker.js",
    "type": "module"
  },
  "permissions": [
    "tabs",
    "storage",
    "cookies",
    "declarativeNetRequest",
    "declarativeNetRequestFeedback",
    "notifications",
    "alarms",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "<all_urls>",
    "https://safebrowsing.googleapis.com/*",
    "https://raw.githubusercontent.com/*",
    "https://urlhaus-api.abuse.ch/*",
    "https://www.virustotal.com/*",
    "https://identitytoolkit.googleapis.com/*",
    "https://securetoken.googleapis.com/*",
    "https://*.gstatic.com/*",
    "https://*.firebaseapp.com/*",
    "https://api.builtwith.com/*",
    "http://localhost:3000/*"

  ],
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "static_trackers",
        "enabled": true,
        "path": "dnr_static_rules.json"
      }
    ]
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["alerts/alert.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "dashboard/dashboard.html",
        "dashboard/dashboard.css",
        "dashboard/dashboard.js",
        "ui-icons/firewall.png",
        "ui-icons/radar.png",
        "ui-icons/alert.png",
        "popup/firebase-auth.bundle.js"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}
